{
  "name": "pulseauthtoolkit",
  "version": "4.0.9",
  "description": "Toolkit for authentication components with Tailwind CSS styles.",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src/index.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js",
      "style": "./src/index.css"
    },
    "./dist/index.css": "./src/index.css",
    "./dist/components/Signin": {
      "import": "./dist/components/Signin/index.js",
      "require": "./dist/components/Signin"
    },
    "./dist/components/Signup": {
      "import": "./dist/components/Signup/index.js",
      "require": "./dist/components/Signup"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "npm run build:ts && npm run build:css",
    "preversion": "npm run build",
    "version": "npm publish",
    "build:ts": "tsc",
    "build:css": "tailwindcss build src/index.css -o dist/index.css --minify"
  },
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "^18.3.3",
    "cpx": "^1.5.0",
    "typescript": "^5.5.2"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-router-dom": "^6.0.2"
  },
  "dependencies": {
    "@types/js-cookie": "^3.0.6",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.4"
  }
}
